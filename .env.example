# AirCalc Bot Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git (it's in .gitignore)

# Telegram Bot Token from @BotFather
# Get it: https://t.me/botfather
BOT_TOKEN=your_bot_token_from_botfather_here

# Secret password for accessing /stats endpoint
# Use a strong, random password
SECRET_PASSWORD=your_secure_admin_password_here

# Flask server port (default: 5000)
# On production, usually use 80 (HTTP) or 443 (HTTPS) behind nginx
PORT=5000

# Optional: For production deployment
# Set to False in production
FLASK_ENV=development
DEBUG=False
